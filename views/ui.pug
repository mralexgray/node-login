//- extends index


//-block neck
include includes

mixin listItem(x)
	- index = sections.indexOf(x) + 1
	li.nav__item(data-color=x.color, data-index=index)
		a.nav__link(href='#'+index class='c-'+x.color)
			i.fa(class='fa-' + x.icon)

mixin listitems
	each x in sections
		+listItem(x)

mixin panels
	each x in sections
		+panel(x)
		
mixin panel(x)
	- index = sections.indexOf(x) + 1
	section.panel(class='b-'+x.color, id=index)
		article.panel__wrapper
			.panel__content
				h1.panel__headline
					i.fa(clas='fa-'+x.icon) &nbsp; #{x.title}
				.panel__block
					p #{x.text}

head
	+vport()
	+fa()
	+font('Lato:300,700')
	
	!= css('interface')
