
@import 'nib'
	
random(min, max)
	return floor( math(0, "random") * max + min )
randomC()
	background-color hsl(random(0, 360), 50%, 50%)

body
	randomC()

.cloaked
	display none

.grab
	size 10% 100%
	background-color black
	z-index 100
	left 0
	position relative
	float left
	// display inline
.content

	fixed right
	// display none 
	overflow hidden
	border-radius 25px
	// size 90% 60%
	border 4px solid red
	// position absolute
	left 50%
	// top 50%
	// transform translate(-50%, -50%)
	
raiseText()
	color grey
	text-shadow  -1px 1px 0 white
	
