	flex 1
	position relative


.nav__link
	display flex
	flex-center()
	absolute top left
	size 100%
	text-decoration none
	font-size 24px
	animate()
	transition box-shadow 1s
	&:hover
		background darken(dark,30)
		box-shadow 0px -3px 0px @color inset
		// box-shadow:inset 0px 0px 0px 10px #f00
		// border-bottom 10px solid white

.panel
	min-height 100vh
	display flex
	flex-center()
	overflow hidden
	p
		margin 0 0 25px 0
		color blackish
		font-size 24px
		// max-width 800px
		&:last-child
			margin-bottom 10vh

.panel__wrapper
	padding 7vh 7vw
	perspective 1000px

.panel__content
	opacity 0
	margin-left 20vw // left margin
	will-change transform
	transform scale(0.7) rotateX(-230deg)
	transform-origin center 80%
	animate(1.275)
	&.active
		transform none
		opacity 1

// .panel__content--active
// 	transform none
// 	opacity 1

.panel__headline
	font-weight 700
	opacity 0.8
	font-size 48px
	margin 0 0 25px 0

.panel__block
	height 3px
	background rgba(0, 0, 0, 0.2)
	margin 0 0 25px 0

@media (max-width: 640px)
	.nav
		width 70px
	.nav__list
		height 90vh

	.panel__headline
		font-size 36px
	.panel__wrapper
		padding 10vh 10vw
	.panel
		p
			font-size 16px

