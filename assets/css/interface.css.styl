hamburger()
	.burger
		height menusHeight
		position relative
		display flex
		flex-center()
		z-index 2
		background dark
		cursor pointer
		animate()
		&:hover
			background lighten(@background,40)

	patty_part(beforeNegAfterPos = -1)
		content ""
		position absolute
		size 100%
		background white
		top (beforeNegAfterPos * 10)px

	.burger__patty
		position relative
		size 60% 2px
		background white
		&:before
			patty_part()
		&:after
			patty_part(1)

	.burger__patty
	.burger__patty:before
	.burger__patty:after
		will-change transform
		animate(1.2)

	pattyArrowAnimaton()
		&
			transform rotate(90deg)
			&:before
				transform rotate(-45deg) translate(-7px, -7px) scaleX(0.7)
			&:after
				transform rotate(45deg) translate(-7px, 7px) scaleX(0.7)

	.burger--active
		.burger__patty
			pattyArrowAnimaton()

	@media (max-width: 640px)
		.burger
			height menusHeight
		.burger__patty
			transform scale(0.8)
		.burger--active
			.burger__patty
				transform scale(0.8) rotate(90deg)

